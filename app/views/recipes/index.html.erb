<main>
  <h1>Recipes page</h1>
  <button type="button">
    <%= link_to 'New Recipe', new_recipe_path %>
  <button>
  <ul>
    <% @recipes.each do |recipe| %>
      <li>
        <div>
          <h3><%= recipe.name %></h3>
          <%= link_to "Details", recipe_path(recipe)  %>
          <%= link_to "Delete", recipe, method: "delete" %>
        </div>
        <p><%= recipe.description %></p>
      </li>
    <% end %>
  </ul>
</main>