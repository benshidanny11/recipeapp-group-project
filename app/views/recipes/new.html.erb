<section class="container container-fluid">
  <h3 class='m-3'> Add Recipe</h3>
  <%= form_with url: recipes_path, scope: :recipe do |form| %>
    <%= form.text_field :name, placeholder: 'Please enter name', class: 'row m-3 form-control', require: true %>
    <%= form.text_field :preparation_time, placeholder: 'Please enter the preparation time', class: 'row m-3 form-control', require: true %>
    <%= form.text_field :cooking_time, placeholder: 'Please enter the cooking time', class: 'row m-3 form-control', require: true %>
    <%= form.text_area :description, placeholder: 'Please enter the description', class: 'row m-3 form-control', require: true %>
    <%= form.submit "Submit", class: 'm-3 btn btn-outline-info' %>
  <% end %>
</section>